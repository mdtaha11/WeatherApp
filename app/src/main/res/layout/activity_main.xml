<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:padding="7dp"
android:layout_height="match_parent"
android:background="@drawable/ww"
tools:context=".MainActivity">


<TextView
    android:id="@+id/textView_temp"

    android:layout_width="wrap_content"
    android:layout_height="106dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="75dp"
    android:text=""
    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
    android:textSize="85sp"
    app:fontFamily="casual"
    android:layout_marginStart="12dp" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="109dp"
    android:layout_marginTop="75dp"
    android:layout_toRightOf="@+id/textView_temp"
    android:text="@string/c"
    android:textSize="85sp"
    app:fontFamily="casual"
    android:layout_toEndOf="@+id/textView_temp" />

<TextView
    android:id="@+id/textView_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView_temp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:text=""

    android:textSize="20sp"
    app:fontFamily="serif" />


    <EditText
        android:id="@+id/cityname"
        android:layout_width="283dp"


        android:layout_height="60dp"
        android:background="#70ECF3F1"
        android:ems="10"

        android:hint="@string/search_the_city"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/cityname"
        android:layout_toRightOf="@+id/cityname"
        android:background="@drawable/magnify"
        android:onClick="search"
        android:padding="5dp"
        android:textSize="18sp" />
</RelativeLayout>